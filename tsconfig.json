{
  "compilerOptions": {
    /* - - Base Options - - */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,

    /* - - Strictness - - */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* - - Node Options - - */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["es2022"]
  }
}